{
  "name": "vacay-photo-map",
  "version": "1.0.0",
  "private": true,
  "description": "Interactive vacation photo map with timeline visualization",
  "scripts": {
    "dev": "pnpm --filter vacay-photo-map-app dev",
    "dev:api": "pnpm --filter vacay-photo-map-api dev",
    "dev:docker": "concurrently -n docker,app,api -c blue,green,yellow \"docker-compose up\" \"pnpm dev\" \"pnpm dev:api\"",
    "build": "pnpm --filter vacay-photo-map-app build",
    "preview": "pnpm --filter vacay-photo-map-app preview",
    "lint": "pnpm --filter vacay-photo-map-app lint",
    "lint:check": "pnpm --filter vacay-photo-map-app lint:check",
    "format": "pnpm --filter vacay-photo-map-app format",
    "format:check": "pnpm --filter vacay-photo-map-app format:check",
    "test": "pnpm --filter vacay-photo-map-app test",
    "test:api": "pnpm --filter vacay-photo-map-api test",
    "type-check": "pnpm --filter vacay-photo-map-app type-check",
    "type-check:api": "pnpm --filter vacay-photo-map-api type-check",
    "migrate:api": "pnpm --filter vacay-photo-map-api migrate",
    "seed:api": "pnpm --filter vacay-photo-map-api seed",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.15.0"
  },
  "packageManager": "pnpm@9.15.0",
  "lint-staged": {
    "app/src/**/*.{ts,vue,js}": [
      "prettier --write"
    ],
    "api/src/**/*.ts": [
      "prettier --write"
    ]
  }
}
